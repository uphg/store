.sidebar-group.is-sub-group > .sidebar-heading:not(.clickable) {
  font-size: inherit;
  cursor: pointer!important;
  font-weight: bold;
  opacity: 1!important;
}

.dropdown-wrapper .nav-dropdown .dropdown-item h4 {
  margin-bottom: 0.3rem!important;
}

body
  &::-webkit-scrollbar
    /* 滚动条整体样式 */
    width: 12px; /* 定义纵向滚动条宽度 */
    height: 12px; /* 定义横向滚动条高度 */

  &::-webkit-scrollbar-thumb
    /* 滚动条内部滑块 */
    opacity 0
    border-radius: 6px;
    background-color rgba(144, 147, 153, 0.3)

  &::-webkit-scrollbar-thumb:hover
    /* 鼠标悬停滚动条内部滑块 */
    background: #bbb;

  &::-webkit-scrollbar-track
    /* 滚动条内部轨道 */
    background: #ededed;

button
  // height: 32px;
  border-radius: 4px;
  padding: 6px 15px;
  font-size: 14px;
  outline: 0;
  cursor: pointer;
  overflow: visible;
  transition: all .3s cubic-bezier(.645,.045,.355,1);
  background: #fff;
  border: 1px solid #d9d9d9;
  box-shadow: 0 2px 0 rgba(0, 0, 0, .015);

button:hover,
button:focus
  color: $accentColor;
  background: #fff;
  border-color: $accentColor;
  
button:focus
  box-shadow: 0 0 0 2px rgba(24,144,255,.2);

.re-part
  position relative
  z-index 1
  transition border-color 0.3s
  background-color #fff
  padding 20px 26px
  border 1px solid #e0dfcc
  &:hover
    border-color $accentColor;
  > :first-child
    margin-top 0
  > :last-child
    margin-bottom 0